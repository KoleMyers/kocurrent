# Caddy reverse proxy: edit domains to match your ROOT_URL and PUBLIC_URL.
# Caddy will obtain Let's Encrypt certificates automatically (ensure DNS points here and ports 80/443 are open).

chat.kocurrent.com {
    reverse_proxy rocketchat:3000 {
        flush_interval 0
        transport http {
            read_timeout 0
            write_timeout 0
        }
        header_up X-Forwarded-Proto https
        header_up X-Forwarded-Host {host}
    }
}

meet.kocurrent.com {
    reverse_proxy web:80
}
